---
import BaseLayout from '../layouts/Base.astro';
import SocialMediaLinks from "@/components/SocialMediaLinks";
import { WORK_EXPERIENCE, TECHNICAL_SKILLS } from 'src/consts';
import { getFormattedDate } from 'src/utils/date';

---
			
<BaseLayout 
	title="Home"
	image='/demo.png'>
	<section class="flex flex-col-reverse sm:flex-row items-center gap-8 sm:gap-8 mb-12">
	  <!-- LEFT SIDE: Text -->
	  <div class="flex-1">
	    <h1 class="text-4xl sm:text-5xl font-bold mb-6">Hello World! I'm Mitanshu Bhoot ðŸ‘‹</h1>
	    
	    <p class="text-lg leading-relaxed mb-6">
	      Let's <code>git commit</code> to some introductions!
	      <br><br>
	    As a Backend & Cloud Engineer, I specialize in building robust APIs, microservices, and server-side architectures that power modern applications. From designing RESTful endpoints and database schemas to deploying scalable cloud infrastructure, I love crafting the foundational layers that make great software possible. Whether it's debugging complex distributed systems, optimizing cloud resources, or architecting backend solutions that scale, I thrive on solving the challenging problems that happen behind the scenes. Let's build something impactful!    
	    </p>
	
	
	    <div>
	      <span class="text-base">You can find me on: </span>
	      <SocialMediaLinks />
	    </div>
	  </div>
	
	  <!-- RIGHT SIDE: Profile Image -->
	  <div class="flex-shrink-0">
	    <img 
	      src="/mitanshu.jpg" 
	      alt="Mitanshu Bhoot" 
	      class="w-40 h-40 sm:w-56 sm:h-56 rounded-full object-cover shadow-lg"
	    />
	  </div>
	</section>

	<section class="mt-16">
		<h2 class="title">Work Experience</h2>
		<!-- <ul class="space-y-4 sm:space-y-2">
			{
				WORK_EXPERIENCE.map(({ id, company, position, start, end }) => (
					<li>
						{/* â€¢ <p class="inline-block sm:mt-2"> {getFormattedDate(start)} - {getFormattedDate(end)}{position} @ <u><a href={"/work/#"+id.toString()}>{company}</a></u></p> */}
						<div class="inline-block sm:mt-2">
							<span>{getFormattedDate(start)} - {getFormattedDate(end)}</span>
							<span> => </span>
							<span>{position} @ </span>
							<u><a href={"/work/#"+id.toString()}>{company}</a></u>
						</div>
					</li>
				))
			}
		</ul> -->
		
		

		<ol class="relative border-s timeline">                  
			{
				WORK_EXPERIENCE.map(({ id, company, position, start, end, isPresent }) => (
					<li class="mb-10 ms-4">
						<div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
						<time class="mb-1 text-sm font-normal leading-none timeline-text">{getFormattedDate(start)} - {isPresent ? "Present" : getFormattedDate(end)}</time>
						<h3 class="text-lg font-semibold timeline-tex">{position} @ <u><a href={"/work/#"+id.toString()}>{company}</a></u></h3>
					</li>
				))
			}
		</ol>
	</section>

	<section class="mt-16">
		<h2 class="title">Education</h2>
		<ol class="relative border-s timeline">                  
			<li class="mb-10 ms-4">
				<div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
				<time class="mb-1 text-sm font-normal leading-none timeline-text">Aug 2024 â€“ May 2026</time>
				<h3 class="text-lg font-semibold timeline-tex">M.S. in Computer Science | GPA: 4.0/4.0</h3>
				<p class="text-sm timeline-text mt-1">Indiana University, Bloomington, USA</p>
				<p class="text-sm timeline-text mt-2">
					<strong>Relevant Courses:</strong> Applied Algorithms, Advanced Database Concepts, Cloud Computing, Computer Networks, Advanced Machine Learning, NLP
				</p>
			</li>
			
			<li class="mb-10 ms-4">
				<div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
				<time class="mb-1 text-sm font-normal leading-none timeline-text">Aug 2018 â€“ May 2022</time>
				<h3 class="text-lg font-semibold timeline-tex">B.Tech. in Computer Science | GPA: 3.8/4.0</h3>
				<p class="text-sm timeline-text mt-1">Savitribai Phule Pune University, India</p>
				<p class="text-sm timeline-text mt-2">
					<strong>Relevant Courses:</strong> Data Structures, Object-Oriented Programming, Cloud Computing, Operating Systems
				</p>
			</li>
		</ol>
	</section>

	<section class="mt-16">
			<h2 class="title">Technical Skills</h2>
			<ul class="space-y-4 sm:space-y-2">
				{
					TECHNICAL_SKILLS.map(({ title, desc }) => (
						<li>
							<u>{title}:</u>
							<p class="inline-block sm:mt-2">{desc}</p>
						</li>
					))
				}
			</ul>
	</section>
</BaseLayout>
